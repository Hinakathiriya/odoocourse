    <record id="marble_details_form" model="ir.ui.view">
        <field name="name">Marble details</field>
        <field name="model">marble.details</field>
        <field name="arch" type="xml">
            <form>
                <!--<header>
                    <button name="action_transfer" type="object" string="Transfer"/>
		        </header>-->
                <sheet>
                    <div class="oe_title">
                        <h1><field name="pro_name"/></h1>
                    </div>
                    <notebook>
                        <page string="Marble Details">
                            <group>
                                <group>
                                    <field name="quantity"/>
                                    <field name="uom"/>
                                </group>
                                <group>
                                    <field name="unit_price"/>
                                    <field name="total_price"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


