<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="marble_details_tree" model="ir.ui.view">
        <field name="name">Marble details</field>
        <field name="model">marble.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="pro_name"/>
                <field name="quantity"/>
                <field name="unit_price"/>
            </tree>
        </field>
    </record>

    <record id="marble_details_form" model="ir.ui.view">
        <field name="name">Marble details</field>
        <field name="model">marble.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="pro_name"/></h1>
                    </div>
                    <notebook>
                        <page string="Marble Details">
                            <group>
                                <group>
                                    <field name="quantity" widget="many2one_tags"/>
                                    <field name="uom"/>
                                </group>
                                <group>
                                    <field name="unit_price"/>
                                    <field name="total_price"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="marble_order_tree" model="ir.ui.view">
        <field name="name">Marble order</field>
        <field name="model">marble.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="vendor_name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="marble_order_form" model="ir.ui.view">
        <field name="name">Marble order</field>
        <field name="model">marble.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="vendor_name"/></h1>
                        <field name="date"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="marble_details_line_tree" model="ir.ui.view">
        <field name="name">Marble details line</field>
        <field name="model">marble.details.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="pro_id"/>
            </tree>
        </field>
    </record>

    <record id="marble_details_line_form" model="ir.ui.view">
        <field name="name">Marble details line</field>
        <field name="model">marble.details.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="pro_id" widget="many2one_tags"/></h1>
                    </div>
                    <notebook>
                        <page string="Marble Details">
                            <group>
                                <group>
                                    <field name="quantity_id" widget="many2one_tags"/>
                                </group>
                                <group>
                                    <field name="unit_price_id" widget="many2one_tags"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>